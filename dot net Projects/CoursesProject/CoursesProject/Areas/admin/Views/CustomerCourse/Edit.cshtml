@model TbCustomerCourse
<div class="content-wrapper">
    <div class="page-header">
    </div>
    <div class="row">
        <div class="col-md-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <form class="forms-sample" method="post" enctype="multipart/form-data"
                          id="MyForm" asp-controller="CustomerCourse" asp-action="Save" role="form">

                        <input type="hidden" asp-for="CustomerCourseId" />
                        <input type="hidden" asp-for="CreatedBy" />
                        <input type="hidden" asp-for="CurrentState" />
                        <input type="hidden" asp-for="CreatedDate" />
                        <input type="hidden" asp-for="UpdatedBy" />
                        <input type="hidden" asp-for="UpdatedDate" />

                        <div class="form-group">
                            <label for="exampleInputUsername1">Payment Method</label>
                            <select class="form-control" asp-for="PaymentMethod" asp-items="@(new SelectList(ViewBag.payment,"PaymentMethodId","PaymentMethodName"))"></select>
                            <span></span>
                        </div>

                        <div class="form-group">
                            <label for="exampleInputUsername1">Customer</label>
                            <select class="form-control" asp-for="CustomerId" asp-items="@(new SelectList(ViewBag.Customer,"CustomerId","CustomerName"))"></select>
                            <span></span>
                        </div>
                        <div class="form-group">
                            <label for="exampleInputUsername1">Course</label>
                            <select class="form-control" asp-for="CourseId" asp-items="@(new SelectList(ViewBag.Course,"CourseId","CourseName"))"></select>
                            <span></span>
                        </div>

                        <div class="form-group col-md-12" style="float:left;">
                            <label for="exampleInputUsername1">Paymen Value</label>
                            <input asp-for="PaymentValue" type="number" class="form-control" placeholder="Payment Value">
                            <span style="color:crimson" asp-validation-for="PaymentValue"></span>
                        </div>
                        <button  type="submit" formmethod="post" class="btn btn-gradient-primary me-2 col-md-2 ">Save</button>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    @if (!string.IsNullOrEmpty(ViewBag.Failed))
    {
        <script>
            // Display a SweetAlert popup
            Swal.fire({
                icon: 'error',
                title: '@ViewBag.Failed',
                showConfirmButton: true // Show a confirm button
            }).then((result) => {
            @{
                ViewBag.Failed = ""; // Assigning ViewBag.Success in Razor code
            }
                                    });
        </script>
    }

}
