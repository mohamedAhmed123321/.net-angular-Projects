@model RegisterModel
  <!-- breadcrumb start -->
<div class="breadcrumb-section">
    <div class="container">
        <div class="row">
            <div class="col-sm-6">
                <div class="page-title">
                    <h2>@general.lblCreateAccount</h2>
                </div>
            </div>
            <div class="col-sm-6">
                <nav aria-label="breadcrumb" class="theme-breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="index.html">@general.lblHome</a></li>
                        <li class="breadcrumb-item active" aria-current="page">@general.lblCreateAccount</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>
<!-- breadcrumb End -->
<!--section start-->
<section class="register-page section-b-space">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h3>create account</h3>
                <div class="theme-card">
                    <form method="post" enctype="multipart/form-data" asp-controller="Users" asp-action="Register" class="theme-form">
                        <input type="hidden" asp-for="ReturnUrl" />
                        <div class="form-row">
                            <div class="col-md-6">
                                <label for="email">@general.lblFirstName</label>
                                <input asp-for="FirstName" type="text" class="form-control" id="fname" placeholder="First Name"
                                       required="">
                                <span asp-validation-for="FirstName" class="text text-info"></span>
                            </div>
                            <div class="col-md-6">
                                <label for="review">@general.lblLastName</label>
                                <input asp-for="LastName" type="text" class="form-control" id="lname" placeholder="Last Name"
                                       required="">
                                <span asp-validation-for="LastName" class="text text-info"></span>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="col-md-6">
                                <label for="email">@general.lblEmail</label>
                                <input asp-for="Email" type="email" class="form-control" id="email" placeholder="Email" required="">
                                <span asp-validation-for="Email" class="text text-info"></span>
                            </div>
                            <div class="col-md-6">
                                <label for="phone">@general.lblPhone</label>
                                <input asp-for="Phone" type="number" class="form-control" id="phone" placeholder="phone" required="">
                                <span asp-validation-for="Phone" class="text text-info"></span>
                            </div>
                            <div class="col-md-6">
                                <label for="review">@general.lblPassword</label>
                                <input asp-for="Password" type="password" class="form-control" id="review"
                                       placeholder="Enter your password" required="">
                                <span asp-validation-for="Password" class="text text-info"></span>
                            </div><button type="submit" class="btn btn-solid">create Account</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
<!--Section ends-->
@section scripts
    {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}