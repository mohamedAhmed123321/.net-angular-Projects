@model LoginModel
 <!-- breadcrumb start -->
<div class="breadcrumb-section">
    <div class="container">
        <div class="row">
            <div class="col-sm-6">
                <div class="page-title">
                    <h2>customer's login</h2>
                </div>
            </div>
            <div class="col-sm-6">
                <nav aria-label="breadcrumb" class="theme-breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/Home/Index">@general.lblHome</a></li>
                        <li class="breadcrumb-item active">@general.lbllogin</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>
<!-- breadcrumb End -->
<!--section start-->
<section class="login-page section-b-space">
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <h3>@general.lbllogin</h3>
                <div class="theme-card">
                    <form method="post" enctype="multipart/form-data" asp-controller="Users" asp-action="Login" class="theme-form">
                        <input type="hidden" asp-for="ReturnUrl" />
                        <div class="form-group">
                            <label for="email">@general.lblEmail</label>
                            <input asp-for="Email" type="email" class="form-control" id="email" placeholder="Email" required="">
                            <span asp-validation-for="Email" class="text text-info"></span>
                        </div>
                        <div class="form-group">
                            <label for="review">@general.lblPassword</label>
                            <input asp-for="Password" type="password" class="form-control" id="review"
                                   placeholder="Enter your password" required="">
                            <span asp-validation-for="Password" class="text text-info"></span>
                        </div><button type="submit" class="btn btn-solid">Login</button>
                    </form>
                </div>
            </div>
            <div class="col-lg-6 right-login">
                <h3>New Customer</h3>
                <div class="theme-card authentication-right">
                    <h6 class="title-font">@general.lblCreateAccount</h6>
                    <p>
                        Sign up for a free account at our store. Registration is quick and easy. It allows you to be
                        able to order from our shop. To start shopping click register.
                    </p><a asp-controller="Users" asp-action="Register" asp-route-returnUrl="@Model.ReturnUrl"
                           class="btn btn-solid">@general.lblCreateAccount</a>
                </div>
            </div>
        </div>
    </div>
</section>
<!--Section ends-->
@section scripts
{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}